.input-field
    max-width 800px
    margin-bottom: 10px
    i.material-icons
      color $icon-color

    .prefix
      font-size 1.5rem
      top: 1rem;
      width: 1rem;
      ~ input 
        margin-left 2rem
        width calc(100% - 2rem)
      ~ label
        margin-left 2.4rem
    label 
      font-size px-to-rem(16px)
      z-index: 1
      height 2.2rem
      color $text-color 
      &.active 
        transform: translateY(-5px) scale(0.7)
        font-weight: bold
        color: $text-color-highlight !important
      
    input, textarea 
        z-index 2
        position: relative
        color $text-color;
        background-color: transparent

    input[type=text] 
        margin-bottom 0;
    